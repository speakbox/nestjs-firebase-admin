{
  "name": "@speakbox/nestjs-firebase-admin",
  "version": "1.2.0",
  "description": "NestJS Firebase Admin Service Factory",
  "author": "Valentin Prugnaud <valentin@speakbox.ca>",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "readmeFilename": "README.md",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "prepare": "husky install",
    "release:dryrun": "npx semantic-release --dry-run --branch $(git describe --contains --all HEAD)",
    "release": "npx semantic-release",
    "test": "jest --runInBand --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "watch": "tsc -w"
  },
  "keywords": [
    "nestjs"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/speakbox/nestjs-firebase-admin.git"
  },
  "bugs": "https://github.com/nestjsplus/nestjs-firebase-admin",
  "peerDependencies": {
    "@nestjs/common": "^8.4.3",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.4.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5"
  },
  "dependencies": {
    "firebase-admin": "^10.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@jest-mock/express": "^1.4.5",
    "@nestjs/testing": "8.4.7",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/express": "4.17.13",
    "@types/jest": "27.5.2",
    "@types/node": "17.0.45",
    "@types/supertest": "2.0.12",
    "cz-conventional-changelog": "^3.3.0",
    "firebase-jest-testing": "^0.0.4-alpha.5",
    "husky": "^7.0.4",
    "jest": "27.5.1",
    "jest-node-exports-resolver": "^1.1.6",
    "prettier": "2.7.1",
    "standard-version": "^9.5.0",
    "supertest": "6.2.4",
    "ts-jest": "27.1.5",
    "ts-loader": "^9.3.1",
    "ts-node": "10.9.1",
    "tsc-watch": "4.6.2",
    "tsconfig-paths": "3.14.1",
    "tslint": "5.20.1",
    "typescript": "4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
